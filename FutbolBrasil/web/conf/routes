# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index(p:Int ?= 0, s ?= "sort", o ?= "asc", f ?= "")

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


GET     /news/list         			controllers.Application.getNews()
GET     /news/:id         			controllers.Application.getNewsById(id:Long)
GET     /resource/list   			controllers.Application.getResource()
POST    /resource/update            controllers.Application.upResource()