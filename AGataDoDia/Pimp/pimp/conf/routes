# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                                                                   controllers.Assets.at(path="/public", file)

#WomenView
# WomenView list (look at the default values for pagination parameters)
GET     /women/list			                                                            controllers.WomenView.list(p:Int ?= 0, s ?= "name", o ?= "asc", f ?= "")
GET     /women/lsort		                                                            controllers.WomenView.lsort()
# Add WomenView
GET     /women/blank		                                                            controllers.WomenView.blank()
POST    /women				                                                            controllers.WomenView.submit()
# Edit existing woman
GET     /women/sort/:ids	                                                            controllers.WomenView.sort(ids:String)
GET     /women/:id			                                                            controllers.WomenView.edit(id:Integer)
POST    /women/:id			                                                            controllers.WomenView.update(id:Integer)
# Delete a woman
POST    /women/:id/delete		                                                        controllers.WomenView.delete(id:Integer)

